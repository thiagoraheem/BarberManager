modules = ["nodejs-20", "python-3.11"]
[agent]
expertMode = true
integrations = ["javascript_database==1.0.0", "javascript_log_in_with_replit==1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["cargo", "libiconv", "libxcrypt", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend"

[[workflows.workflow]]
name = "Backend"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python -m pip install fastapi uvicorn sqlalchemy pydantic python-jose bcrypt python-multipart python-dotenv passlib && python main.py"
waitForPort = 8000

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8000
externalPort = 80
